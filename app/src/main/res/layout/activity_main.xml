<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syanaz.syanaz_1202152327_modul1.MainActivity">


    <TextView
        android:id="@+id/text_makanmalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Makan Malam"
        android:gravity="center"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/text_milea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_makanmalam"
        android:layout_centerHorizontal="true"
        android:text="dengan Milea" />

    <EditText
        android:id="@+id/makanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_milea"
        android:ems="10"
        android:hint="Masukkan Jenis Makanan"
        android:inputType="textPersonName"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makanan"
        android:ems="10"
        android:hint="Masukkan Jumlah "
        android:inputType="textPersonName"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/eatbus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makanan"
        android:layout_marginTop="73dp"
        android:layout_toLeftOf="@+id/text_milea"
        android:layout_toStartOf="@+id/text_milea"
        android:background="@color/colorAccent"
        android:onClick="eatbus"
        android:text="Eatbus" />

    <Button
        android:id="@+id/abnormal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eatbus"
        android:layout_alignBottom="@+id/eatbus"
        android:layout_toEndOf="@+id/text_milea"
        android:layout_toRightOf="@+id/text_milea"
        android:background="@color/colorAccent"
        android:onClick="abnormal"
        android:text="Abnormal" />
</RelativeLayout>
